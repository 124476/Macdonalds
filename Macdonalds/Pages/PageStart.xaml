<Page x:Class="Macdonalds.Pages.PageStart"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Macdonalds.Pages"
      xmlns:uc="clr-namespace:Macdonalds.Controls"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageStart">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>
        <WrapPanel Margin="10">
            <Button x:Name="StartBtn" Content="Заказ" Style="{StaticResource StandartButton}" Click="StartBtn_Click" Grid.Row="1" Width="180" Height="180" Margin="10"></Button>
            <uc:WorkedZakaz Width="350"></uc:WorkedZakaz>
            <uc:FeedBacks></uc:FeedBacks>
            <Button x:Name="MenuBtn" Content="Меню" Style="{StaticResource StandartButton}" Click="MenuBtn_Click"  Grid.Row="1" Width="180" Height="180" Margin="10"></Button>
        </WrapPanel>
    </Grid>
</Page>
